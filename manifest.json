{
  "manifest_version": 3,
  "name": "ToGo",
  "description": "Base Level Extension",
  "version": "1.0",
  "action": {
    "default_popup": "./dist/popup.html",
    "default_icon": {
      "16": "./dist/16.png",
      "32": "./dist/32.png",
      "48": "./dist/32.png",
      "128": "./dist/128.png"
    }
  },
  "background": {
    "service_worker": "./dist/assets/background.js"
  },
  "permissions": [
    "webRequest",
    "webNavigation",
    "tabs",
    "storage",
    "history"
  ],
  "host_permissions": ["<all_urls>"]
}